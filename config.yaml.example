# API & Turnier
api_token: "PUT_YOUR_API_TOKEN_HERE"
tournament_id: "PUT_YOUR_TOURNAMENT_ID_HERE"

# Abfrageintervall (Sekunden)
poll_interval: 1

# Sprachausgabe
tts:
  provider: "piper"           # "piper" oder "pyttsx3"
  # Piper-Optionen (nur relevant wenn provider == "piper")
  model_path: "voices/de_DE-thorsten-medium.onnx"
  speaker: null               # z.B. 0 oder null
  length_scale: 0.95
  noise_scale: 0.5
  noise_w: 0.8

  # pyttsx3-Optionen (nur relevant wenn provider == "pyttsx3")
  rate: 170
  volume: 1.0
  voice_index: null

# Debug / Dateien
files:
  save_audio: false           # WAVs dauerhaft speichern? (default: false = nur temporär)
  write_announcement_files: false  # Text-Dateien in data/<tournament>/announcements schreiben

# Durchsagen
announcement:
  notify_sound: null          # Optionaler Hinweiston (WAV); null = deaktiviert
  notify_resume_after_seconds: 30  # Wartezeit ohne TTS, bevor der Sound erneut abgespielt wird
  enabled: true               # Ansagen beim Start aktiv? (Konsole: pause/resume)
  # Liste aller Platzhalter siehe README (Abschnitt "Verfügbare Platzhalter").
  speech_template: "Tisch {TABLE}: {PLAYER1_FULL} gegen {PLAYER2_FULL}"
  speech_template_doubles: "Tisch {TABLE}: {TEAM_A_PLAYER1_FULL} und {TEAM_A_PLAYER2_FULL} gegen {TEAM_B_PLAYER1_FULL} und {TEAM_B_PLAYER2_FULL}"
